<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">

    <!-- Merge Colors -->
    <ResourceDictionary.MergedDictionaries>
        <ResourceDictionary Source="Colors.xaml" />
    </ResourceDictionary.MergedDictionaries>

    <!-- Primary Brushes -->
    <SolidColorBrush x:Key="Primary50Brush" Color="{StaticResource Primary50}" />
    <SolidColorBrush x:Key="Primary100Brush" Color="{StaticResource Primary100}" />
    <SolidColorBrush x:Key="Primary200Brush" Color="{StaticResource Primary200}" />
    <SolidColorBrush x:Key="Primary300Brush" Color="{StaticResource Primary300}" />
    <SolidColorBrush x:Key="Primary400Brush" Color="{StaticResource Primary400}" />
    <SolidColorBrush x:Key="Primary500Brush" Color="{StaticResource Primary500}" />
    <SolidColorBrush x:Key="Primary600Brush" Color="{StaticResource Primary600}" />
    <SolidColorBrush x:Key="Primary700Brush" Color="{StaticResource Primary700}" />
    <SolidColorBrush x:Key="Primary800Brush" Color="{StaticResource Primary800}" />
    <SolidColorBrush x:Key="Primary900Brush" Color="{StaticResource Primary900}" />

    <!-- Accent Brushes -->
    <SolidColorBrush x:Key="Accent100Brush" Color="{StaticResource Accent100}" />
    <SolidColorBrush x:Key="Accent200Brush" Color="{StaticResource Accent200}" />
    <SolidColorBrush x:Key="Accent400Brush" Color="{StaticResource Accent400}" />
    <SolidColorBrush x:Key="Accent700Brush" Color="{StaticResource Accent700}" />
    <SolidColorBrush x:Key="AccentA100Brush" Color="{StaticResource AccentA100}" />
    <SolidColorBrush x:Key="AccentA200Brush" Color="{StaticResource AccentA200}" />
    <SolidColorBrush x:Key="AccentA400Brush" Color="{StaticResource AccentA400}" />
    <SolidColorBrush x:Key="AccentA700Brush" Color="{StaticResource AccentA700}" />

    <!-- Semantic Color Brushes -->
    <SolidColorBrush x:Key="SuccessBrush" Color="{StaticResource SuccessColor}" />
    <SolidColorBrush x:Key="WarningBrush" Color="{StaticResource WarningColor}" />
    <SolidColorBrush x:Key="ErrorBrush" Color="{StaticResource ErrorColor}" />
    <SolidColorBrush x:Key="InfoBrush" Color="{StaticResource InfoColor}" />

    <!-- Success Brushes -->
    <SolidColorBrush x:Key="Success50Brush" Color="{StaticResource Success50}" />
    <SolidColorBrush x:Key="Success100Brush" Color="{StaticResource Success100}" />
    <SolidColorBrush x:Key="Success500Brush" Color="{StaticResource Success500}" />
    <SolidColorBrush x:Key="Success700Brush" Color="{StaticResource Success700}" />

    <!-- Warning Brushes -->
    <SolidColorBrush x:Key="Warning50Brush" Color="{StaticResource Warning50}" />
    <SolidColorBrush x:Key="Warning100Brush" Color="{StaticResource Warning100}" />
    <SolidColorBrush x:Key="Warning500Brush" Color="{StaticResource Warning500}" />
    <SolidColorBrush x:Key="Warning700Brush" Color="{StaticResource Warning700}" />

    <!-- Error Brushes -->
    <SolidColorBrush x:Key="Error50Brush" Color="{StaticResource Error50}" />
    <SolidColorBrush x:Key="Error100Brush" Color="{StaticResource Error100}" />
    <SolidColorBrush x:Key="Error500Brush" Color="{StaticResource Error500}" />
    <SolidColorBrush x:Key="Error700Brush" Color="{StaticResource Error700}" />

    <!-- Info Brushes -->
    <SolidColorBrush x:Key="Info50Brush" Color="{StaticResource Info50}" />
    <SolidColorBrush x:Key="Info100Brush" Color="{StaticResource Info100}" />
    <SolidColorBrush x:Key="Info500Brush" Color="{StaticResource Info500}" />
    <SolidColorBrush x:Key="Info700Brush" Color="{StaticResource Info700}" />

    <!-- Gray Brushes -->
    <SolidColorBrush x:Key="Gray50Brush" Color="{StaticResource Gray50}" />
    <SolidColorBrush x:Key="Gray100Brush" Color="{StaticResource Gray100}" />
    <SolidColorBrush x:Key="Gray200Brush" Color="{StaticResource Gray200}" />
    <SolidColorBrush x:Key="Gray300Brush" Color="{StaticResource Gray300}" />
    <SolidColorBrush x:Key="Gray400Brush" Color="{StaticResource Gray400}" />
    <SolidColorBrush x:Key="Gray500Brush" Color="{StaticResource Gray500}" />
    <SolidColorBrush x:Key="Gray600Brush" Color="{StaticResource Gray600}" />
    <SolidColorBrush x:Key="Gray700Brush" Color="{StaticResource Gray700}" />
    <SolidColorBrush x:Key="Gray800Brush" Color="{StaticResource Gray800}" />
    <SolidColorBrush x:Key="Gray900Brush" Color="{StaticResource Gray900}" />

    <!-- Surface and Background Brushes -->
    <SolidColorBrush x:Key="SurfaceBrush" Color="{StaticResource SurfaceColor}" />
    <SolidColorBrush x:Key="BackgroundBrush" Color="{StaticResource BackgroundColor}" />
    <SolidColorBrush x:Key="PaperBrush" Color="{StaticResource Paper}" />
    <SolidColorBrush x:Key="CardBrush" Color="{StaticResource CardColor}" />
    <SolidColorBrush x:Key="DividerBrush" Color="{StaticResource DividerColor}" />
    <SolidColorBrush x:Key="BorderBrush" Color="{StaticResource Border}" />

    <!-- Text Brushes -->
    <SolidColorBrush x:Key="TextPrimaryBrush" Color="{StaticResource TextPrimaryColor}" />
    <SolidColorBrush x:Key="TextSecondaryBrush" Color="{StaticResource TextSecondaryColor}" />
    <SolidColorBrush x:Key="TextDisabledBrush" Color="{StaticResource TextDisabled}" />
    <SolidColorBrush x:Key="TextHintBrush" Color="{StaticResource TextHintColor}" />
    <SolidColorBrush x:Key="TextOnPrimaryBrush" Color="{StaticResource TextOnPrimaryColor}" />
    <SolidColorBrush x:Key="TextOnSecondaryBrush" Color="{StaticResource TextOnSecondary}" />
    <SolidColorBrush x:Key="TextOnSurfaceBrush" Color="{StaticResource TextOnSurface}" />
    <SolidColorBrush x:Key="TextOnBackgroundBrush" Color="{StaticResource TextOnBackground}" />

    <!-- Main Theme Brushes -->
    <SolidColorBrush x:Key="PrimaryBrush" Color="{StaticResource PrimaryColor}" />
    <SolidColorBrush x:Key="PrimaryDarkBrush" Color="{StaticResource PrimaryDarkColor}" />
    <SolidColorBrush x:Key="PrimaryLightBrush" Color="{StaticResource PrimaryLightColor}" />
    <SolidColorBrush x:Key="AccentBrush" Color="{StaticResource AccentColor}" />
    <SolidColorBrush x:Key="AccentDarkBrush" Color="{StaticResource AccentDarkColor}" />
    <SolidColorBrush x:Key="AccentLightBrush" Color="{StaticResource AccentLightColor}" />

    <!-- Business Specific Brushes -->
    <SolidColorBrush x:Key="InvoiceBrush" Color="{StaticResource Invoice}" />
    <SolidColorBrush x:Key="InvoiceDraftBrush" Color="{StaticResource InvoiceDraft}" />
    <SolidColorBrush x:Key="InvoiceFinalizedBrush" Color="{StaticResource InvoiceFinalized}" />
    <SolidColorBrush x:Key="InvoicePaidBrush" Color="{StaticResource InvoicePaid}" />
    <SolidColorBrush x:Key="InvoiceCancelledBrush" Color="{StaticResource InvoiceCancelled}" />

    <SolidColorBrush x:Key="CompanyBrush" Color="{StaticResource Company}" />
    <SolidColorBrush x:Key="TkaWorkerBrush" Color="{StaticResource TkaWorker}" />
    <SolidColorBrush x:Key="FamilyMemberBrush" Color="{StaticResource FamilyMember}" />
    <SolidColorBrush x:Key="JobDescriptionBrush" Color="{StaticResource JobDescription}" />

    <!-- State Brushes -->
    <SolidColorBrush x:Key="ActiveBrush" Color="{StaticResource Active}" />
    <SolidColorBrush x:Key="InactiveBrush" Color="{StaticResource Inactive}" />
    <SolidColorBrush x:Key="PendingBrush" Color="{StaticResource Pending}" />
    <SolidColorBrush x:Key="ProcessingBrush" Color="{StaticResource Processing}" />
    <SolidColorBrush x:Key="CompletedBrush" Color="{StaticResource Completed}" />
    <SolidColorBrush x:Key="FailedBrush" Color="{StaticResource Failed}" />

    <!-- Special Effect Brushes -->
    <SolidColorBrush x:Key="HoverOverlayBrush" Color="{StaticResource HoverOverlay}" />
    <SolidColorBrush x:Key="PressedOverlayBrush" Color="{StaticResource PressedOverlay}" />
    <SolidColorBrush x:Key="FocusOverlayBrush" Color="{StaticResource FocusOverlay}" />
    <SolidColorBrush x:Key="SelectedOverlayBrush" Color="{StaticResource SelectedOverlay}" />
    <SolidColorBrush x:Key="DisabledOverlayBrush" Color="{StaticResource DisabledOverlay}" />

    <!-- Chart Brushes -->
    <SolidColorBrush x:Key="Chart1Brush" Color="{StaticResource Chart1}" />
    <SolidColorBrush x:Key="Chart2Brush" Color="{StaticResource Chart2}" />
    <SolidColorBrush x:Key="Chart3Brush" Color="{StaticResource Chart3}" />
    <SolidColorBrush x:Key="Chart4Brush" Color="{StaticResource Chart4}" />
    <SolidColorBrush x:Key="Chart5Brush" Color="{StaticResource Chart5}" />
    <SolidColorBrush x:Key="Chart6Brush" Color="{StaticResource Chart6}" />
    <SolidColorBrush x:Key="Chart7Brush" Color="{StaticResource Chart7}" />
    <SolidColorBrush x:Key="Chart8Brush" Color="{StaticResource Chart8}" />

    <!-- Transparency Brushes -->
    <SolidColorBrush x:Key="Primary50AlphaBrush" Color="{StaticResource Primary50Alpha}" />
    <SolidColorBrush x:Key="Primary25AlphaBrush" Color="{StaticResource Primary25Alpha}" />
    <SolidColorBrush x:Key="Primary10AlphaBrush" Color="{StaticResource Primary10Alpha}" />

    <SolidColorBrush x:Key="Black87AlphaBrush" Color="{StaticResource Black87Alpha}" />
    <SolidColorBrush x:Key="Black54AlphaBrush" Color="{StaticResource Black54Alpha}" />
    <SolidColorBrush x:Key="Black38AlphaBrush" Color="{StaticResource Black38Alpha}" />
    <SolidColorBrush x:Key="Black12AlphaBrush" Color="{StaticResource Black12Alpha}" />

    <SolidColorBrush x:Key="White70AlphaBrush" Color="{StaticResource White70Alpha}" />
    <SolidColorBrush x:Key="White50AlphaBrush" Color="{StaticResource White50Alpha}" />
    <SolidColorBrush x:Key="White30AlphaBrush" Color="{StaticResource White30Alpha}" />
    <SolidColorBrush x:Key="White12AlphaBrush" Color="{StaticResource White12Alpha}" />

    <!-- Gradient Brushes -->
    <LinearGradientBrush x:Key="PrimaryGradientBrush" StartPoint="0,0" EndPoint="1,1">
        <GradientStop Color="{StaticResource GradientStart}" Offset="0"/>
        <GradientStop Color="{StaticResource GradientEnd}" Offset="1"/>
    </LinearGradientBrush>

    <LinearGradientBrush x:Key="AccentGradientBrush" StartPoint="0,0" EndPoint="1,1">
        <GradientStop Color="{StaticResource AccentGradientStart}" Offset="0"/>
        <GradientStop Color="{StaticResource AccentGradientEnd}" Offset="1"/>
    </LinearGradientBrush>

    <LinearGradientBrush x:Key="SuccessGradientBrush" StartPoint="0,0" EndPoint="1,1">
        <GradientStop Color="{StaticResource Success400}" Offset="0"/>
        <GradientStop Color="{StaticResource Success600}" Offset="1"/>
    </LinearGradientBrush>

    <LinearGradientBrush x:Key="WarningGradientBrush" StartPoint="0,0" EndPoint="1,1">
        <GradientStop Color="{StaticResource Warning400}" Offset="0"/>
        <GradientStop Color="{StaticResource Warning600}" Offset="1"/>
    </LinearGradientBrush>

    <LinearGradientBrush x:Key="ErrorGradientBrush" StartPoint="0,0" EndPoint="1,1">
        <GradientStop Color="{StaticResource Error400}" Offset="0"/>
        <GradientStop Color="{StaticResource Error600}" Offset="1"/>
    </LinearGradientBrush>

    <!-- Card Gradient Brushes -->
    <LinearGradientBrush x:Key="CardGradientBrush" StartPoint="0,0" EndPoint="0,1">
        <GradientStop Color="#FFFFFF" Offset="0"/>
        <GradientStop Color="#FAFAFA" Offset="1"/>
    </LinearGradientBrush>

    <LinearGradientBrush x:Key="HeaderGradientBrush" StartPoint="0,0" EndPoint="0,1">
        <GradientStop Color="{StaticResource Primary500}" Offset="0"/>
        <GradientStop Color="{StaticResource Primary700}" Offset="1"/>
    </LinearGradientBrush>

    <!-- Sidebar Gradient -->
    <LinearGradientBrush x:Key="SidebarGradientBrush" StartPoint="0,0" EndPoint="1,0">
        <GradientStop Color="{StaticResource Gray50}" Offset="0"/>
        <GradientStop Color="{StaticResource Gray100}" Offset="1"/>
    </LinearGradientBrush>

    <!-- Button Hover Effects -->
    <LinearGradientBrush x:Key="ButtonHoverGradientBrush" StartPoint="0,0" EndPoint="0,1">
        <GradientStop Color="{StaticResource Primary400}" Offset="0"/>
        <GradientStop Color="{StaticResource Primary600}" Offset="1"/>
    </LinearGradientBrush>

    <LinearGradientBrush x:Key="ButtonPressedGradientBrush" StartPoint="0,0" EndPoint="0,1">
        <GradientStop Color="{StaticResource Primary600}" Offset="0"/>
        <GradientStop Color="{StaticResource Primary800}" Offset="1"/>
    </LinearGradientBrush>

    <!-- Shadow Brushes for Elevation -->
    <SolidColorBrush x:Key="ElevationShadow1" Color="#1F000000" />
    <SolidColorBrush x:Key="ElevationShadow2" Color="#24000000" />
    <SolidColorBrush x:Key="ElevationShadow3" Color="#28000000" />
    <SolidColorBrush x:Key="ElevationShadow4" Color="#2C000000" />
    <SolidColorBrush x:Key="ElevationShadow5" Color="#30000000" />

    <!-- Input Field Brushes -->
    <SolidColorBrush x:Key="InputBackgroundBrush" Color="{StaticResource Surface}" />
    <SolidColorBrush x:Key="InputBorderBrush" Color="{StaticResource Gray300}" />
    <SolidColorBrush x:Key="InputFocusBorderBrush" Color="{StaticResource Primary500}" />
    <SolidColorBrush x:Key="InputErrorBorderBrush" Color="{StaticResource Error500}" />
    <SolidColorBrush x:Key="InputSuccessBorderBrush" Color="{StaticResource Success500}" />

    <!-- Selection Brushes -->
    <SolidColorBrush x:Key="SelectionBrush" Color="{StaticResource Primary100}" />
    <SolidColorBrush x:Key="SelectionBorderBrush" Color="{StaticResource Primary500}" />
    <SolidColorBrush x:Key="SelectionTextBrush" Color="{StaticResource Primary700}" />

    <!-- Specialized Application Brushes -->
    <SolidColorBrush x:Key="NavigationBackgroundBrush" Color="{StaticResource Gray50}" />
    <SolidColorBrush x:Key="ContentBackgroundBrush" Color="{StaticResource Background}" />
    <SolidColorBrush x:Key="ToolbarBackgroundBrush" Color="{StaticResource Surface}" />
    <SolidColorBrush x:Key="StatusBarBackgroundBrush" Color="{StaticResource Gray100}" />

    <!-- Data Grid Brushes -->
    <SolidColorBrush x:Key="DataGridHeaderBrush" Color="{StaticResource Gray100}" />
    <SolidColorBrush x:Key="DataGridAlternatingRowBrush" Color="{StaticResource Gray50}" />
    <SolidColorBrush x:Key="DataGridSelectedRowBrush" Color="{StaticResource Primary50}" />
    <SolidColorBrush x:Key="DataGridHoverRowBrush" Color="{StaticResource Primary25Alpha}" />

</ResourceDictionary>