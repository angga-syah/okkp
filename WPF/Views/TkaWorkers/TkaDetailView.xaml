<UserControl x:Class="InvoiceApp.WPF.Views.TkaWorkers.TkaDetailView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
             xmlns:behaviors="http://schemas.microsoft.com/xaml/behaviors"
             xmlns:lvc="clr-namespace:LiveCharts.Wpf;assembly=LiveCharts.Wpf"
             Background="{DynamicResource MaterialDesignPaper}">

    <UserControl.Resources>
        <!-- Company Assignment Template -->
        <DataTemplate x:Key="CompanyAssignmentTemplate">
            <materialDesign:Card Margin="4" Padding="12" 
                               materialDesign:ElevationAssist.Elevation="Dp1"
                               Background="{DynamicResource MaterialDesignCardBackground}">
                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="Auto"/>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="Auto"/>
                    </Grid.ColumnDefinitions>

                    <!-- Company Icon -->
                    <materialDesign:PackIcon Grid.Column="0" Kind="Domain" 
                                           Width="32" Height="32"
                                           Foreground="{DynamicResource PrimaryHueMidBrush}"
                                           VerticalAlignment="Center" Margin="0,0,12,0"/>

                    <!-- Company Info -->
                    <StackPanel Grid.Column="1" VerticalAlignment="Center">
                        <TextBlock Text="{Binding CompanyName}" 
                                  Style="{StaticResource MaterialDesignBody1TextBlock}"
                                  FontWeight="Bold"/>
                        <TextBlock Text="{Binding AssignmentPeriod}" 
                                  Style="{StaticResource MaterialDesignCaptionTextBlock}"
                                  Opacity="0.8"/>
                        <Border Background="{Binding IsActive, Converter={StaticResource StatusToBrushConverter}}" 
                               CornerRadius="4" Padding="4,2" HorizontalAlignment="Left" Margin="0,4,0,0">
                            <TextBlock Text="{Binding Status}" 
                                      Style="{StaticResource MaterialDesignCaptionTextBlock}"
                                      Foreground="White" FontWeight="Bold"/>
                        </Border>
                    </StackPanel>

                    <!-- Actions -->
                    <StackPanel Grid.Column="2" Orientation="Horizontal" VerticalAlignment="Center">
                        <Button Style="{StaticResource MaterialDesignToolButton}"
                               Command="{Binding DataContext.EditAssignmentCommand, RelativeSource={RelativeSource AncestorType=UserControl}}"
                               CommandParameter="{Binding}"
                               ToolTip="Edit Assignment">
                            <materialDesign:PackIcon Kind="Edit"/>
                        </Button>
                        <Button Style="{StaticResource MaterialDesignToolButton}"
                               Command="{Binding DataContext.EndAssignmentCommand, RelativeSource={RelativeSource AncestorType=UserControl}}"
                               CommandParameter="{Binding}"
                               ToolTip="End Assignment"
                               Visibility="{Binding IsActive, Converter={StaticResource BoolToVisibilityConverter}}">
                            <materialDesign:PackIcon Kind="Stop"/>
                        </Button>
                    </StackPanel>
                </Grid>
            </materialDesign:Card>
        </DataTemplate>

        <!-- Job History Template -->
        <DataTemplate x:Key="JobHistoryTemplate">
            <materialDesign:Card Margin="4" Padding="12" 
                               materialDesign:ElevationAssist.Elevation="Dp1">
                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="Auto"/>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="Auto"/>
                    </Grid.ColumnDefinitions>

                    <!-- Job Icon -->
                    <materialDesign:PackIcon Grid.Column="0" Kind="Work" 
                                           Width="24" Height="24"
                                           Foreground="{DynamicResource SecondaryHueMidBrush}"
                                           VerticalAlignment="Center" Margin="0,0,12,0"/>

                    <!-- Job Info -->
                    <StackPanel Grid.Column="1" VerticalAlignment="Center">
                        <TextBlock Text="{Binding JobDescription}" 
                                  Style="{StaticResource MaterialDesignBody2TextBook}"
                                  FontWeight="Bold"/>
                        <TextBlock Text="{Binding CompanyName}" 
                                  Style="{StaticResource MaterialDesignCaptionTextBlock}"
                                  Opacity="0.8"/>
                        <TextBlock Text="{Binding InvoiceDate, StringFormat='Invoice Date: {0:dd/MM/yyyy}'}" 
                                  Style="{StaticResource MaterialDesignCaptionTextBlock}"
                                  Opacity="0.6"/>
                    </StackPanel>

                    <!-- Amount -->
                    <TextBlock Grid.Column="2" Text="{Binding Amount, StringFormat=C}" 
                              Style="{StaticResource MaterialDesignBody1TextBlock}"
                              FontWeight="Bold" VerticalAlignment="Center"
                              Foreground="{DynamicResource PrimaryHueMidBrush}"/>
                </Grid>
            </materialDesign:Card>
        </DataTemplate>

        <!-- Animation Storyboards -->
        <Storyboard x:Key="FadeInAnimation">
            <DoubleAnimation Storyboard.TargetProperty="Opacity"
                           From="0" To="1" Duration="0:0:0.3">
                <DoubleAnimation.EasingFunction>
                    <CubicEase EasingMode="EaseOut"/>
                </DoubleAnimation.EasingFunction>
            </DoubleAnimation>
        </Storyboard>
    </UserControl.Resources>

    <UserControl.Triggers>
        <EventTrigger RoutedEvent="Loaded">
            <BeginStoryboard Storyboard="{StaticResource FadeInAnimation}"/>
        </EventTrigger>
    </UserControl.Triggers>

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <!-- Header -->
        <materialDesign:Card Grid.Row="0" Margin="16,16,16,8" Padding="20" 
                            materialDesign:ElevationAssist.Elevation="Dp2">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>

                <!-- Profile Photo -->
                <Border Grid.Column="0" Width="80" Height="80" 
                       Background="{DynamicResource PrimaryHueLightBrush}"
                       CornerRadius="40" Margin="0,0,20,0">
                    <Grid>
                        <!-- Photo or Initials -->
                        <Image Source="{Binding TkaWorker.ProfilePhoto}" 
                              Stretch="UniformToFill"
                              Visibility="{Binding TkaWorker.HasProfilePhoto, Converter={StaticResource BoolToVisibilityConverter}}">
                            <Image.Clip>
                                <EllipseGeometry Center="40,40" RadiusX="40" RadiusY="40"/>
                            </Image.Clip>
                        </Image>
                        
                        <TextBlock Text="{Binding TkaWorker.Initials}" 
                                  Style="{StaticResource MaterialDesignHeadline4TextBlock}"
                                  Foreground="White" HorizontalAlignment="Center" 
                                  VerticalAlignment="Center" FontWeight="Bold"
                                  Visibility="{Binding TkaWorker.HasProfilePhoto, Converter={StaticResource InverseBoolToVisibilityConverter}}"/>
                    </Grid>
                </Border>

                <!-- TKA Information -->
                <StackPanel Grid.Column="1" VerticalAlignment="Center">
                    <TextBlock Text="{Binding TkaWorker.Nama}" 
                              Style="{StaticResource MaterialDesignHeadline4TextBlock}"
                              Foreground="{DynamicResource PrimaryHueMidBrush}"/>
                    <TextBlock Text="{Binding TkaWorker.Passport}" 
                              Style="{StaticResource MaterialDesignHeadline6TextBlock}"
                              Opacity="0.8"/>
                    
                    <StackPanel Orientation="Horizontal" Margin="0,8,0,0">
                        <!-- Division Badge -->
                        <Border Background="{DynamicResource SecondaryHueLightBrush}" 
                               CornerRadius="8" Padding="8,4" Margin="0,0,8,0">
                            <TextBlock Text="{Binding TkaWorker.Divisi}" 
                                      Style="{StaticResource MaterialDesignCaptionTextBlock}"
                                      Foreground="White" FontWeight="Bold"/>
                        </Border>

                        <!-- Gender Badge -->
                        <Border Background="{Binding TkaWorker.JenisKelamin, Converter={StaticResource GenderToBrushConverter}}" 
                               CornerRadius="8" Padding="8,4" Margin="0,0,8,0">
                            <StackPanel Orientation="Horizontal">
                                <materialDesign:PackIcon Kind="{Binding TkaWorker.JenisKelamin, Converter={StaticResource GenderToIconConverter}}" 
                                                       Width="12" Height="12" Foreground="White" 
                                                       VerticalAlignment="Center" Margin="0,0,4,0"/>
                                <TextBlock Text="{Binding TkaWorker.JenisKelamin}" 
                                          Style="{StaticResource MaterialDesignCaptionTextBlock}"
                                          Foreground="White" FontWeight="Bold"/>
                            </StackPanel>
                        </Border>

                        <!-- Status Badge -->
                        <Border Background="{Binding TkaWorker.IsActive, Converter={StaticResource StatusToBrushConverter}}" 
                               CornerRadius="8" Padding="8,4">
                            <TextBlock Text="{Binding TkaWorker.IsActive, Converter={StaticResource StatusToTextConverter}}" 
                                      Style="{StaticResource MaterialDesignCaptionTextBlock}"
                                      Foreground="White" FontWeight="Bold"/>
                        </Border>
                    </StackPanel>

                    <!-- Quick Stats -->
                    <StackPanel Orientation="Horizontal" Margin="0,8,0,0">
                        <StackPanel Orientation="Horizontal" Margin="0,0,16,0">
                            <materialDesign:PackIcon Kind="Domain" Width="16" Height="16" 
                                                   VerticalAlignment="Center" Margin="0,0,4,0" Opacity="0.7"/>
                            <TextBlock Text="{Binding ActiveCompanies, StringFormat='{0} Companies'}" 
                                      Style="{StaticResource MaterialDesignCaptionTextBlock}" VerticalAlignment="Center"/>
                        </StackPanel>
                        
                        <StackPanel Orientation="Horizontal" Margin="0,0,16,0">
                            <materialDesign:PackIcon Kind="Work" Width="16" Height="16" 
                                                   VerticalAlignment="Center" Margin="0,0,4,0" Opacity="0.7"/>
                            <TextBlock Text="{Binding TotalJobs, StringFormat='{0} Jobs'}" 
                                      Style="{StaticResource MaterialDesignCaptionTextBlock}" VerticalAlignment="Center"/>
                        </StackPanel>

                        <StackPanel Orientation="Horizontal">
                            <materialDesign:PackIcon Kind="CurrencyUsd" Width="16" Height="16" 
                                                   VerticalAlignment="Center" Margin="0,0,4,0" Opacity="0.7"/>
                            <TextBlock Text="{Binding TotalEarnings, StringFormat='{0:C}'}" 
                                      Style="{StaticResource MaterialDesignCaptionTextBlock}" VerticalAlignment="Center"/>
                        </StackPanel>
                    </StackPanel>
                </StackPanel>

                <!-- Header Actions -->
                <StackPanel Grid.Column="2" Orientation="Horizontal" VerticalAlignment="Center">
                    <Button Style="{StaticResource MaterialDesignOutlinedButton}"
                            Command="{Binding ManageFamilyCommand}"
                            Margin="0,0,8,0" Padding="16,8">
                        <StackPanel Orientation="Horizontal">
                            <materialDesign:PackIcon Kind="AccountGroup" VerticalAlignment="Center"/>
                            <TextBlock Text="Family" Margin="8,0,0,0"/>
                        </StackPanel>
                    </Button>

                    <Button Style="{StaticResource MaterialDesignOutlinedButton}"
                            Command="{Binding EditTkaCommand}"
                            Margin="0,0,8,0" Padding="16,8">
                        <StackPanel Orientation="Horizontal">
                            <materialDesign:PackIcon Kind="Edit" VerticalAlignment="Center"/>
                            <TextBlock Text="Edit" Margin="8,0,0,0"/>
                        </StackPanel>
                    </Button>

                    <Button Style="{StaticResource MaterialDesignRaisedButton}"
                            Command="{Binding CreateInvoiceCommand}"
                            Padding="16,8">
                        <StackPanel Orientation="Horizontal">
                            <materialDesign:PackIcon Kind="Plus" VerticalAlignment="Center"/>
                            <TextBlock Text="New Invoice" Margin="8,0,0,0"/>
                        </StackPanel>
                    </Button>
                </StackPanel>
            </Grid>
        </materialDesign:Card>

        <!-- Content -->
        <ScrollViewer Grid.Row="1" Margin="16,0,16,16" VerticalScrollBarVisibility="Auto">
            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="*"/>
                </Grid.RowDefinitions>

                <!-- Statistics Cards -->
                <UniformGrid Grid.Row="0" Rows="1" Columns="4" Margin="0,0,0,16">
                    <!-- Total Revenue -->
                    <materialDesign:Card Margin="4" Padding="20" materialDesign:ElevationAssist.Elevation="Dp2">
                        <StackPanel HorizontalAlignment="Center">
                            <materialDesign:PackIcon Kind="TrendingUp" Width="32" Height="32" 
                                                   Foreground="{DynamicResource PrimaryHueMidBrush}" Margin="0,0,0,8"/>
                            <TextBlock Text="{Binding TotalRevenue, StringFormat=C}" 
                                      Style="{StaticResource MaterialDesignHeadline5TextBlock}"
                                      HorizontalAlignment="Center"/>
                            <TextBlock Text="Total Revenue" 
                                      Style="{StaticResource MaterialDesignCaptionTextBlock}"
                                      HorizontalAlignment="Center" Opacity="0.8"/>
                            <TextBlock Text="{Binding RevenueGrowth, StringFormat='{0:+0.0%;-0.0%;0%} this month'}" 
                                      Style="{StaticResource MaterialDesignCaptionTextBlock}"
                                      HorizontalAlignment="Center" Margin="0,4,0,0"
                                      Foreground="{DynamicResource SecondaryHueMidBrush}"/>
                        </StackPanel>
                    </materialDesign:Card>

                    <!-- Job Count -->
                    <materialDesign:Card Margin="4" Padding="20" materialDesign:ElevationAssist.Elevation="Dp2">
                        <StackPanel HorizontalAlignment="Center">
                            <materialDesign:PackIcon Kind="Work" Width="32" Height="32" 
                                                   Foreground="{DynamicResource SecondaryHueMidBrush}" Margin="0,0,0,8"/>
                            <TextBlock Text="{Binding TotalJobs}" 
                                      Style="{StaticResource MaterialDesignHeadline5TextBlock}"
                                      HorizontalAlignment="Center"/>
                            <TextBlock Text="Total Jobs" 
                                      Style="{StaticResource MaterialDesignCaptionTextBlock}"
                                      HorizontalAlignment="Center" Opacity="0.8"/>
                            <TextBlock Text="{Binding JobsThisMonth, StringFormat='{0} this month'}" 
                                      Style="{StaticResource MaterialDesignCaptionTextBlock}"
                                      HorizontalAlignment="Center" Margin="0,4,0,0"
                                      Foreground="{DynamicResource PrimaryHueMidBrush}"/>
                        </StackPanel>
                    </materialDesign:Card>

                    <!-- Average Job Value -->
                    <materialDesign:Card Margin="4" Padding="20" materialDesign:ElevationAssist.Elevation="Dp2">
                        <StackPanel HorizontalAlignment="Center">
                            <materialDesign:PackIcon Kind="Calculator" Width="32" Height="32" 
                                                   Foreground="{DynamicResource MaterialDesignValidationErrorBrush}" Margin="0,0,0,8"/>
                            <TextBlock Text="{Binding AverageJobValue, StringFormat=C}" 
                                      Style="{StaticResource MaterialDesignHeadline5TextBlock}"
                                      HorizontalAlignment="Center"/>
                            <TextBlock Text="Average Job Value" 
                                      Style="{StaticResource MaterialDesignCaptionTextBlock}"
                                      HorizontalAlignment="Center" Opacity="0.8"/>
                        </StackPanel>
                    </materialDesign:Card>

                    <!-- Last Activity -->
                    <materialDesign:Card Margin="4" Padding="20" materialDesign:ElevationAssist.Elevation="Dp2">
                        <StackPanel HorizontalAlignment="Center">
                            <materialDesign:PackIcon Kind="Calendar" Width="32" Height="32" 
                                                   Foreground="{DynamicResource MaterialDesignDarkForeground}" Margin="0,0,0,8"/>
                            <TextBlock Text="{Binding DaysSinceLastJob}" 
                                      Style="{StaticResource MaterialDesignHeadline5TextBlock}"
                                      HorizontalAlignment="Center"/>
                            <TextBlock Text="Days Since Last Job" 
                                      Style="{StaticResource MaterialDesignCaptionTextBlock}"
                                      HorizontalAlignment="Center" Opacity="0.8"/>
                            <TextBlock Text="{Binding LastJobDate, StringFormat='{0:dd/MM/yyyy}'}" 
                                      Style="{StaticResource MaterialDesignCaptionTextBlock}"
                                      HorizontalAlignment="Center" Margin="0,4,0,0"
                                      Foreground="{DynamicResource MaterialDesignDarkForeground}"/>
                        </StackPanel>
                    </materialDesign:Card>
                </UniformGrid>

                <!-- Chart and Overview -->
                <Grid Grid.Row="1" Margin="0,0,0,16">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="2*"/>
                        <ColumnDefinition Width="*"/>
                    </Grid.ColumnDefinitions>

                    <!-- Performance Chart -->
                    <materialDesign:Card Grid.Column="0" Padding="16" Margin="0,0,8,0"
                                        materialDesign:ElevationAssist.Elevation="Dp2">
                        <Grid>
                            <Grid.RowDefinitions>
                                <RowDefinition Height="Auto"/>
                                <RowDefinition Height="*"/>
                            </Grid.RowDefinitions>

                            <TextBlock Grid.Row="0" Text="Monthly Performance" 
                                      Style="{StaticResource MaterialDesignHeadline6TextBlock}"
                                      Margin="0,0,0,16"/>

                            <lvc:CartesianChart Grid.Row="1" Height="200" Series="{Binding PerformanceSeries}">
                                <lvc:CartesianChart.AxisX>
                                    <lvc:Axis Title="Month" Labels="{Binding MonthLabels}"/>
                                </lvc:CartesianChart.AxisX>
                                <lvc:CartesianChart.AxisY>
                                    <lvc:Axis Title="Revenue (IDR)" LabelFormatter="{Binding CurrencyFormatter}"/>
                                </lvc:CartesianChart.AxisY>
                            </lvc:CartesianChart>
                        </Grid>
                    </materialDesign:Card>

                    <!-- Quick Overview -->
                    <materialDesign:Card Grid.Column="1" Padding="16" Margin="8,0,0,0"
                                        materialDesign:ElevationAssist.Elevation="Dp2">
                        <StackPanel>
                            <TextBlock Text="Quick Overview" 
                                      Style="{StaticResource MaterialDesignHeadline6TextBlock}"
                                      Margin="0,0,0,16"/>

                            <StackPanel Margin="0,0,0,12">
                                <TextBlock Text="Registration Date:" 
                                          Style="{StaticResource MaterialDesignCaptionTextBlock}"
                                          Opacity="0.8"/>
                                <TextBlock Text="{Binding TkaWorker.CreatedAt, StringFormat=dd MMMM yyyy}" 
                                          Style="{StaticResource MaterialDesignBody2TextBlock}"/>
                            </StackPanel>

                            <StackPanel Margin="0,0,0,12">
                                <TextBlock Text="Active Companies:" 
                                          Style="{StaticResource MaterialDesignCaptionTextBlock}"
                                          Opacity="0.8"/>
                                <TextBlock Text="{Binding ActiveCompanies}" 
                                          Style="{StaticResource MaterialDesignBody2TextBlock}"/>
                            </StackPanel>

                            <StackPanel Margin="0,0,0,12">
                                <TextBlock Text="Family Members:" 
                                          Style="{StaticResource MaterialDesignCaptionTextBlock}"
                                          Opacity="0.8"/>
                                <TextBlock Text="{Binding FamilyMemberCount}" 
                                          Style="{StaticResource MaterialDesignBody2TextBlock}"/>
                            </StackPanel>

                            <StackPanel Margin="0,0,0,12">
                                <TextBlock Text="Performance Rating:" 
                                          Style="{StaticResource MaterialDesignCaptionTextBlock}"
                                          Opacity="0.8"/>
                                <StackPanel Orientation="Horizontal">
                                    <ItemsControl ItemsSource="{Binding PerformanceStars}">
                                        <ItemsControl.ItemsPanel>
                                            <ItemsPanelTemplate>
                                                <StackPanel Orientation="Horizontal"/>
                                            </ItemsPanelTemplate>
                                        </ItemsControl.ItemsPanel>
                                        <ItemsControl.ItemTemplate>
                                            <DataTemplate>
                                                <materialDesign:PackIcon Kind="Star" Width="16" Height="16" 
                                                                       Foreground="{Binding Converter={StaticResource StarRatingConverter}}"
                                                                       Margin="0,0,2,0"/>
                                            </DataTemplate>
                                        </ItemsControl.ItemTemplate>
                                    </ItemsControl>
                                    <TextBlock Text="{Binding PerformanceScore, StringFormat='({0:F1})'}" 
                                              Style="{StaticResource MaterialDesignCaptionTextBlock}"
                                              VerticalAlignment="Center" Margin="8,0,0,0"/>
                                </StackPanel>
                            </StackPanel>
                        </StackPanel>
                    </materialDesign:Card>
                </Grid>

                <!-- Tabbed Content -->
                <TabControl Grid.Row="2" Style="{StaticResource MaterialDesignTabControl}">
                    <!-- Company Assignments Tab -->
                    <TabItem Header="Company Assignments">
                        <Grid Margin="16">
                            <Grid.RowDefinitions>
                                <RowDefinition Height="Auto"/>
                                <RowDefinition Height="*"/>
                            </Grid.RowDefinitions>

                            <!-- Header -->
                            <StackPanel Grid.Row="0" Orientation="Horizontal" Margin="0,0,0,16">
                                <TextBlock Text="Current Assignments" 
                                          Style="{StaticResource MaterialDesignHeadline6TextBlock}"
                                          VerticalAlignment="Center"/>
                                <Button Style="{StaticResource MaterialDesignRaisedButton}"
                                       Command="{Binding AddAssignmentCommand}"
                                       Margin="16,0,0,0" Padding="12,6">
                                    <StackPanel Orientation="Horizontal">
                                        <materialDesign:PackIcon Kind="Plus" VerticalAlignment="Center"/>
                                        <TextBlock Text="Add Assignment" Margin="4,0,0,0"/>
                                    </StackPanel>
                                </Button>
                            </StackPanel>

                            <!-- Assignments List -->
                            <ScrollViewer Grid.Row="1" VerticalScrollBarVisibility="Auto">
                                <ItemsControl ItemsSource="{Binding CompanyAssignments}"
                                             ItemTemplate="{StaticResource CompanyAssignmentTemplate}">
                                    <ItemsControl.ItemsPanel>
                                        <ItemsPanelTemplate>
                                            <StackPanel/>
                                        </ItemsPanelTemplate>
                                    </ItemsControl.ItemsPanel>
                                </ItemsControl>
                            </ScrollViewer>
                        </Grid>
                    </TabItem>

                    <!-- Job History Tab -->
                    <TabItem Header="Job History">
                        <Grid Margin="16">
                            <Grid.RowDefinitions>
                                <RowDefinition Height="Auto"/>
                                <RowDefinition Height="Auto"/>
                                <RowDefinition Height="*"/>
                            </Grid.RowDefinitions>

                            <!-- Header -->
                            <StackPanel Grid.Row="0" Orientation="Horizontal" Margin="0,0,0,16">
                                <TextBlock Text="Job History" 
                                          Style="{StaticResource MaterialDesignHeadline6TextBlock}"
                                          VerticalAlignment="Center"/>
                                <ComboBox SelectedItem="{Binding SelectedPeriodFilter}"
                                         Margin="16,0,0,0" Width="150">
                                    <ComboBoxItem Content="Last 30 Days"/>
                                    <ComboBoxItem Content="Last 3 Months"/>
                                    <ComboBoxItem Content="Last 6 Months"/>
                                    <ComboBoxItem Content="Last Year"/>
                                    <ComboBoxItem Content="All Time"/>
                                </ComboBox>
                            </StackPanel>

                            <!-- Job Summary -->
                            <Grid Grid.Row="1" Margin="0,0,0,16">
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="*"/>
                                    <ColumnDefinition Width="*"/>
                                    <ColumnDefinition Width="*"/>
                                </Grid.ColumnDefinitions>

                                <StackPanel Grid.Column="0" HorizontalAlignment="Center">
                                    <TextBlock Text="{Binding FilteredJobCount}" 
                                              Style="{StaticResource MaterialDesignHeadline5TextBlock}"
                                              HorizontalAlignment="Center"/>
                                    <TextBlock Text="Total Jobs" 
                                              Style="{StaticResource MaterialDesignCaptionTextBlock}"
                                              HorizontalAlignment="Center" Opacity="0.8"/>
                                </StackPanel>

                                <StackPanel Grid.Column="1" HorizontalAlignment="Center">
                                    <TextBlock Text="{Binding FilteredTotalRevenue, StringFormat=C}" 
                                              Style="{StaticResource MaterialDesignHeadline5TextBlock}"
                                              HorizontalAlignment="Center"/>
                                    <TextBlock Text="Total Revenue" 
                                              Style="{StaticResource MaterialDesignCaptionTextBlock}"
                                              HorizontalAlignment="Center" Opacity="0.8"/>
                                </StackPanel>

                                <StackPanel Grid.Column="2" HorizontalAlignment="Center">
                                    <TextBlock Text="{Binding FilteredAverageValue, StringFormat=C}" 
                                              Style="{StaticResource MaterialDesignHeadline5TextBlock}"
                                              HorizontalAlignment="Center"/>
                                    <TextBlock Text="Average Job Value" 
                                              Style="{StaticResource MaterialDesignCaptionTextBlock}"
                                              HorizontalAlignment="Center" Opacity="0.8"/>
                                </StackPanel>
                            </Grid>

                            <!-- Job History List -->
                            <ScrollViewer Grid.Row="2" VerticalScrollBarVisibility="Auto">
                                <ItemsControl ItemsSource="{Binding FilteredJobHistory}"
                                             ItemTemplate="{StaticResource JobHistoryTemplate}">
                                    <ItemsControl.ItemsPanel>
                                        <ItemsPanelTemplate>
                                            <StackPanel/>
                                        </ItemsPanelTemplate>
                                    </ItemsControl.ItemsPanel>
                                </ItemsControl>
                            </ScrollViewer>
                        </Grid>
                    </TabItem>

                    <!-- Family Members Tab -->
                    <TabItem Header="Family Members">
                        <Grid Margin="16">
                            <Grid.RowDefinitions>
                                <RowDefinition Height="Auto"/>
                                <RowDefinition Height="*"/>
                            </Grid.RowDefinitions>

                            <!-- Header -->
                            <StackPanel Grid.Row="0" Orientation="Horizontal" Margin="0,0,0,16">
                                <TextBlock Text="Family Members" 
                                          Style="{StaticResource MaterialDesignHeadline6TextBlock}"
                                          VerticalAlignment="Center"/>
                                <Button Style="{StaticResource MaterialDesignRaisedButton}"
                                       Command="{Binding ManageFamilyCommand}"
                                       Margin="16,0,0,0" Padding="12,6">
                                    <StackPanel Orientation="Horizontal">
                                        <materialDesign:PackIcon Kind="AccountGroup" VerticalAlignment="Center"/>
                                        <TextBlock Text="Manage Family" Margin="4,0,0,0"/>
                                    </StackPanel>
                                </Button>
                            </StackPanel>

                            <!-- Family Members Summary -->
                            <ScrollViewer Grid.Row="1" VerticalScrollBarVisibility="Auto">
                                <StackPanel>
                                    <StackPanel Visibility="{Binding HasFamilyMembers, Converter={StaticResource BoolToVisibilityConverter}}">
                                        <ItemsControl ItemsSource="{Binding FamilyMembers}">
                                            <ItemsControl.ItemTemplate>
                                                <DataTemplate>
                                                    <materialDesign:Card Margin="4" Padding="12" 
                                                                       materialDesign:ElevationAssist.Elevation="Dp1">
                                                        <Grid>
                                                            <Grid.ColumnDefinitions>
                                                                <ColumnDefinition Width="Auto"/>
                                                                <ColumnDefinition Width="*"/>
                                                            </Grid.ColumnDefinitions>

                                                            <materialDesign:PackIcon Grid.Column="0" 
                                                                                   Kind="{Binding Relationship, Converter={StaticResource RelationshipToIconConverter}}" 
                                                                                   Width="24" Height="24"
                                                                                   Foreground="{Binding Relationship, Converter={StaticResource RelationshipToBrushConverter}}"
                                                                                   VerticalAlignment="Center" Margin="0,0,12,0"/>

                                                            <StackPanel Grid.Column="1" VerticalAlignment="Center">
                                                                <TextBlock Text="{Binding Nama}" 
                                                                          Style="{StaticResource MaterialDesignBody1TextBlock}"
                                                                          FontWeight="Bold"/>
                                                                <StackPanel Orientation="Horizontal">
                                                                    <TextBlock Text="{Binding Relationship, Converter={StaticResource RelationshipToDisplayConverter}}" 
                                                                              Style="{StaticResource MaterialDesignCaptionTextBlock}"
                                                                              Margin="0,0,8,0"/>
                                                                    <TextBlock Text="•" Style="{StaticResource MaterialDesignCaptionTextBlock}" 
                                                                              Margin="0,0,8,0"/>
                                                                    <TextBlock Text="{Binding Passport}" 
                                                                              Style="{StaticResource MaterialDesignCaptionTextBlock}"/>
                                                                </StackPanel>
                                                            </StackPanel>
                                                        </Grid>
                                                    </materialDesign:Card>
                                                </DataTemplate>
                                            </ItemsControl.ItemTemplate>
                                        </ItemsControl>
                                    </StackPanel>

                                    <!-- No Family Members -->
                                    <StackPanel HorizontalAlignment="Center" VerticalAlignment="Center"
                                               Visibility="{Binding HasFamilyMembers, Converter={StaticResource InverseBoolToVisibilityConverter}}">
                                        <materialDesign:PackIcon Kind="AccountGroup" Width="48" Height="48" 
                                                               Foreground="{DynamicResource MaterialDesignCheckBoxDisabled}"
                                                               Margin="0,0,0,16"/>
                                        <TextBlock Text="No Family Members Added" 
                                                  Style="{StaticResource MaterialDesignHeadline6TextBlock}"
                                                  HorizontalAlignment="Center" Opacity="0.6"/>
                                        <TextBlock Text="Click 'Manage Family' to add family members." 
                                                  Style="{StaticResource MaterialDesignBody2TextBlock}"
                                                  HorizontalAlignment="Center" Opacity="0.6" Margin="0,8,0,0"/>
                                    </StackPanel>
                                </StackPanel>
                            </ScrollViewer>
                        </Grid>
                    </TabItem>
                </TabControl>
            </Grid>
        </ScrollViewer>

        <!-- Loading Overlay -->
        <Grid Grid.RowSpan="2" Background="#80000000" 
              Visibility="{Binding IsLoading, Converter={StaticResource BoolToVisibilityConverter}}">
            <StackPanel HorizontalAlignment="Center" VerticalAlignment="Center">
                <ProgressBar Style="{StaticResource MaterialDesignCircularProgressBar}"
                            Value="0" IsIndeterminate="True" Width="60" Height="60"/>
                <TextBlock Text="Loading TKA worker details..." 
                          Style="{StaticResource MaterialDesignHeadline6TextBlock}"
                          Foreground="White" Margin="0,16,0,0" HorizontalAlignment="Center"/>
            </StackPanel>
        </Grid>
    </Grid>
</UserControl>