<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
                    xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes">

    <!-- Invoice Report Template -->
    <DataTemplate x:Key="InvoiceReportTemplate">
        <materialDesign:Card materialDesign:ElevationAssist.Elevation="Dp4"
                             Background="White"
                             Margin="16">
            <Grid Margin="32">
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>  <!-- Header -->
                    <RowDefinition Height="Auto"/>  <!-- Report Info -->
                    <RowDefinition Height="*"/>     <!-- Content -->
                    <RowDefinition Height="Auto"/>  <!-- Summary -->
                    <RowDefinition Height="Auto"/>  <!-- Footer -->
                </Grid.RowDefinitions>
                
                <!-- Report Header -->
                <Grid Grid.Row="0" Margin="0,0,0,32">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="Auto"/>
                    </Grid.ColumnDefinitions>
                    
                    <StackPanel Grid.Column="0">
                        <TextBlock Text="PT. FORTUNA SADA NIOGA"
                                   FontSize="20"
                                   FontWeight="Bold"
                                   Foreground="Black"/>
                        <TextBlock Text="INVOICE REPORT"
                                   FontSize="16"
                                   FontWeight="Bold"
                                   Foreground="Black"
                                   Margin="0,8,0,0"/>
                        <TextBlock Text="{Binding ReportTitle}"
                                   FontSize="14"
                                   Foreground="#666666"
                                   Margin="0,4,0,0"/>
                    </StackPanel>
                    
                    <StackPanel Grid.Column="1" HorizontalAlignment="Right">
                        <TextBlock Text="Generated:"
                                   FontSize="12"
                                   Foreground="Black"
                                   FontWeight="Bold"/>
                        <TextBlock Text="{Binding GeneratedDate, StringFormat=dd MMMM yyyy HH:mm}"
                                   FontSize="11"
                                   Foreground="Black"/>
                        <TextBlock Text="{Binding GeneratedBy}"
                                   FontSize="11"
                                   Foreground="Black"
                                   Margin="0,4,0,0"/>
                    </StackPanel>
                </Grid>
                
                <!-- Report Filters -->
                <StackPanel Grid.Row="1" Margin="0,0,0,24">
                    <TextBlock Text="Report Criteria:"
                               FontSize="12"
                               FontWeight="Bold"
                               Foreground="Black"
                               Margin="0,0,0,8"/>
                    <Grid>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="*"/>
                        </Grid.ColumnDefinitions>
                        
                        <StackPanel Grid.Column="0">
                            <TextBlock Text="Date Range:"
                                       FontSize="11"
                                       FontWeight="Bold"
                                       Foreground="Black"/>
                            <TextBlock FontSize="11" Foreground="Black">
                                <Run Text="{Binding StartDate, StringFormat=dd/MM/yyyy}"/>
                                <Run Text=" - "/>
                                <Run Text="{Binding EndDate, StringFormat=dd/MM/yyyy}"/>
                            </TextBlock>
                        </StackPanel>
                        
                        <StackPanel Grid.Column="1">
                            <TextBlock Text="Status Filter:"
                                       FontSize="11"
                                       FontWeight="Bold"
                                       Foreground="Black"/>
                            <TextBlock Text="{Binding StatusFilter}"
                                       FontSize="11"
                                       Foreground="Black"/>
                        </StackPanel>
                        
                        <StackPanel Grid.Column="2">
                            <TextBlock Text="Company Filter:"
                                       FontSize="11"
                                       FontWeight="Bold"
                                       Foreground="Black"/>
                            <TextBlock Text="{Binding CompanyFilter}"
                                       FontSize="11"
                                       Foreground="Black"/>
                        </StackPanel>
                    </Grid>
                </StackPanel>
                
                <!-- Report Content -->
                <ScrollViewer Grid.Row="2" VerticalScrollBarVisibility="Auto">
                    <ItemsControl ItemsSource="{Binding ReportData}">
                        <ItemsControl.ItemTemplate>
                            <DataTemplate>
                                <Border BorderBrush="#E0E0E0" 
                                        BorderThickness="0,0,0,1"
                                        Padding="0,8">
                                    <Grid>
                                        <Grid.ColumnDefinitions>
                                            <ColumnDefinition Width="120"/>  <!-- Invoice No -->
                                            <ColumnDefinition Width="100"/>  <!-- Date -->
                                            <ColumnDefinition Width="*"/>    <!-- Company -->
                                            <ColumnDefinition Width="80"/>   <!-- Status -->
                                            <ColumnDefinition Width="100"/>  <!-- TKA Count -->
                                            <ColumnDefinition Width="120"/>  <!-- Amount -->
                                        </Grid.ColumnDefinitions>
                                        
                                        <TextBlock Grid.Column="0"
                                                   Text="{Binding InvoiceNumber}"
                                                   FontSize="11"
                                                   Foreground="Black"
                                                   VerticalAlignment="Center"/>
                                        
                                        <TextBlock Grid.Column="1"
                                                   Text="{Binding InvoiceDate, StringFormat=dd/MM/yyyy}"
                                                   FontSize="11"
                                                   Foreground="Black"
                                                   VerticalAlignment="Center"/>
                                        
                                        <TextBlock Grid.Column="2"
                                                   Text="{Binding CompanyName}"
                                                   FontSize="11"
                                                   Foreground="Black"
                                                   VerticalAlignment="Center"
                                                   TextTrimming="CharacterEllipsis"/>
                                        
                                        <TextBlock Grid.Column="3"
                                                   Text="{Binding Status}"
                                                   FontSize="11"
                                                   Foreground="{Binding StatusColor}"
                                                   VerticalAlignment="Center"
                                                   FontWeight="Bold"/>
                                        
                                        <TextBlock Grid.Column="4"
                                                   Text="{Binding TkaCount}"
                                                   FontSize="11"
                                                   Foreground="Black"
                                                   VerticalAlignment="Center"
                                                   HorizontalAlignment="Center"/>
                                        
                                        <TextBlock Grid.Column="5"
                                                   Text="{Binding TotalAmount, StringFormat=Rp {0:N0}}"
                                                   FontSize="11"
                                                   Foreground="Black"
                                                   VerticalAlignment="Center"
                                                   HorizontalAlignment="Right"
                                                   FontWeight="Bold"/>
                                    </Grid>
                                </Border>
                            </DataTemplate>
                        </ItemsControl.ItemTemplate>
                        
                        <!-- Header Template -->
                        <ItemsControl.Template>
                            <ControlTemplate>
                                <StackPanel>
                                    <!-- Column Headers -->
                                    <Border Background="#F5F5F5"
                                            BorderBrush="Black"
                                            BorderThickness="0,0,0,2"
                                            Padding="0,12">
                                        <Grid>
                                            <Grid.ColumnDefinitions>
                                                <ColumnDefinition Width="120"/>
                                                <ColumnDefinition Width="100"/>
                                                <ColumnDefinition Width="*"/>
                                                <ColumnDefinition Width="80"/>
                                                <ColumnDefinition Width="100"/>
                                                <ColumnDefinition Width="120"/>
                                            </Grid.ColumnDefinitions>
                                            
                                            <TextBlock Grid.Column="0" Text="Invoice No." FontSize="12" FontWeight="Bold" Foreground="Black"/>
                                            <TextBlock Grid.Column="1" Text="Date" FontSize="12" FontWeight="Bold" Foreground="Black"/>
                                            <TextBlock Grid.Column="2" Text="Company" FontSize="12" FontWeight="Bold" Foreground="Black"/>
                                            <TextBlock Grid.Column="3" Text="Status" FontSize="12" FontWeight="Bold" Foreground="Black"/>
                                            <TextBlock Grid.Column="4" Text="TKA Count" FontSize="12" FontWeight="Bold" Foreground="Black" HorizontalAlignment="Center"/>
                                            <TextBlock Grid.Column="5" Text="Amount" FontSize="12" FontWeight="Bold" Foreground="Black" HorizontalAlignment="Right"/>
                                        </Grid>
                                    </Border>
                                    
                                    <!-- Data Items -->
                                    <ItemsPresenter/>
                                </StackPanel>
                            </ControlTemplate>
                        </ItemsControl.Template>
                    </ItemsControl>
                </ScrollViewer>
                
                <!-- Report Summary -->
                <Border Grid.Row="3"
                        BorderBrush="Black"
                        BorderThickness="0,2,0,0"
                        Margin="0,24,0,0"
                        Padding="0,16,0,0">
                    <Grid>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="*"/>
                        </Grid.ColumnDefinitions>
                        
                        <!-- Total Invoices -->
                        <StackPanel Grid.Column="0">
                            <TextBlock Text="Total Invoices:"
                                       FontSize="12"
                                       FontWeight="Bold"
                                       Foreground="Black"/>
                            <TextBlock Text="{Binding TotalInvoices}"
                                       FontSize="16"
                                       FontWeight="Bold"
                                       Foreground="#2196F3"/>
                        </StackPanel>
                        
                        <!-- Total TKA -->
                        <StackPanel Grid.Column="1">
                            <TextBlock Text="Total TKA:"
                                       FontSize="12"
                                       FontWeight="Bold"
                                       Foreground="Black"/>
                            <TextBlock Text="{Binding TotalTka}"
                                       FontSize="16"
                                       FontWeight="Bold"
                                       Foreground="#4CAF50"/>
                        </StackPanel>
                        
                        <!-- Total Amount -->
                        <StackPanel Grid.Column="2">
                            <TextBlock Text="Total Amount:"
                                       FontSize="12"
                                       FontWeight="Bold"
                                       Foreground="Black"/>
                            <TextBlock Text="{Binding TotalAmount, StringFormat=Rp {0:N0}}"
                                       FontSize="16"
                                       FontWeight="Bold"
                                       Foreground="#FF5722"/>
                        </StackPanel>
                        
                        <!-- Average Amount -->
                        <StackPanel Grid.Column="3">
                            <TextBlock Text="Average Amount:"
                                       FontSize="12"
                                       FontWeight="Bold"
                                       Foreground="Black"/>
                            <TextBlock Text="{Binding AverageAmount, StringFormat=Rp {0:N0}}"
                                       FontSize="16"
                                       FontWeight="Bold"
                                       Foreground="#9C27B0"/>
                        </StackPanel>
                    </Grid>
                </Border>
                
                <!-- Footer -->
                <StackPanel Grid.Row="4" 
                            Margin="0,24,0,0"
                            HorizontalAlignment="Center">
                    <TextBlock Text="--- End of Report ---"
                               FontSize="12"
                               FontStyle="Italic"
                               Foreground="#666666"
                               HorizontalAlignment="Center"/>
                </StackPanel>
            </Grid>
        </materialDesign:Card>
    </DataTemplate>

    <!-- TKA Report Template -->
    <DataTemplate x:Key="TkaReportTemplate">
        <materialDesign:Card materialDesign:ElevationAssist.Elevation="Dp4"
                             Background="White"
                             Margin="16">
            <Grid Margin="32">
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>  <!-- Header -->
                    <RowDefinition Height="Auto"/>  <!-- Report Info -->
                    <RowDefinition Height="*"/>     <!-- Content -->
                    <RowDefinition Height="Auto"/>  <!-- Summary -->
                </Grid.RowDefinitions>
                
                <!-- Report Header -->
                <Grid Grid.Row="0" Margin="0,0,0,32">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="Auto"/>
                    </Grid.ColumnDefinitions>
                    
                    <StackPanel Grid.Column="0">
                        <TextBlock Text="PT. FORTUNA SADA NIOGA"
                                   FontSize="20"
                                   FontWeight="Bold"
                                   Foreground="Black"/>
                        <TextBlock Text="TKA WORKER REPORT"
                                   FontSize="16"
                                   FontWeight="Bold"
                                   Foreground="Black"
                                   Margin="0,8,0,0"/>
                        <TextBlock Text="{Binding ReportTitle}"
                                   FontSize="14"
                                   Foreground="#666666"
                                   Margin="0,4,0,0"/>
                    </StackPanel>
                    
                    <StackPanel Grid.Column="1" HorizontalAlignment="Right">
                        <TextBlock Text="Generated:"
                                   FontSize="12"
                                   Foreground="Black"
                                   FontWeight="Bold"/>
                        <TextBlock Text="{Binding GeneratedDate, StringFormat=dd MMMM yyyy HH:mm}"
                                   FontSize="11"
                                   Foreground="Black"/>
                    </StackPanel>
                </Grid>
                
                <!-- Report Content -->
                <ScrollViewer Grid.Row="2" VerticalScrollBarVisibility="Auto">
                    <ItemsControl ItemsSource="{Binding TkaWorkers}">
                        <ItemsControl.ItemTemplate>
                            <DataTemplate>
                                <Border BorderBrush="#E0E0E0"
                                        BorderThickness="0,0,0,1"
                                        Padding="0,12">
                                    <Grid>
                                        <Grid.ColumnDefinitions>
                                            <ColumnDefinition Width="*"/>    <!-- Name -->
                                            <ColumnDefinition Width="120"/>  <!-- Passport -->
                                            <ColumnDefinition Width="120"/>  <!-- Division -->
                                            <ColumnDefinition Width="80"/>   <!-- Gender -->
                                            <ColumnDefinition Width="100"/>  <!-- Family Count -->
                                            <ColumnDefinition Width="80"/>   <!-- Status -->
                                        </Grid.ColumnDefinitions>
                                        
                                        <TextBlock Grid.Column="0"
                                                   Text="{Binding Nama}"
                                                   FontSize="12"
                                                   Foreground="Black"
                                                   VerticalAlignment="Center"
                                                   FontWeight="Bold"/>
                                        
                                        <TextBlock Grid.Column="1"
                                                   Text="{Binding Passport}"
                                                   FontSize="11"
                                                   Foreground="Black"
                                                   VerticalAlignment="Center"/>
                                        
                                        <TextBlock Grid.Column="2"
                                                   Text="{Binding Divisi}"
                                                   FontSize="11"
                                                   Foreground="Black"
                                                   VerticalAlignment="Center"/>
                                        
                                        <TextBlock Grid.Column="3"
                                                   Text="{Binding JenisKelamin}"
                                                   FontSize="11"
                                                   Foreground="Black"
                                                   VerticalAlignment="Center"/>
                                        
                                        <TextBlock Grid.Column="4"
                                                   Text="{Binding FamilyMemberCount}"
                                                   FontSize="11"
                                                   Foreground="Black"
                                                   VerticalAlignment="Center"
                                                   HorizontalAlignment="Center"/>
                                        
                                        <TextBlock Grid.Column="5"
                                                   Text="{Binding Status}"
                                                   FontSize="11"
                                                   Foreground="{Binding StatusColor}"
                                                   VerticalAlignment="Center"
                                                   FontWeight="Bold"/>
                                    </Grid>
                                </Border>
                            </DataTemplate>
                        </ItemsControl.ItemTemplate>
                        
                        <!-- Header Template -->
                        <ItemsControl.Template>
                            <ControlTemplate>
                                <StackPanel>
                                    <!-- Column Headers -->
                                    <Border Background="#F5F5F5"
                                            BorderBrush="Black"
                                            BorderThickness="0,0,0,2"
                                            Padding="0,12">
                                        <Grid>
                                            <Grid.ColumnDefinitions>
                                                <ColumnDefinition Width="*"/>
                                                <ColumnDefinition Width="120"/>
                                                <ColumnDefinition Width="120"/>
                                                <ColumnDefinition Width="80"/>
                                                <ColumnDefinition Width="100"/>
                                                <ColumnDefinition Width="80"/>
                                            </Grid.ColumnDefinitions>
                                            
                                            <TextBlock Grid.Column="0" Text="Name" FontSize="12" FontWeight="Bold" Foreground="Black"/>
                                            <TextBlock Grid.Column="1" Text="Passport" FontSize="12" FontWeight="Bold" Foreground="Black"/>
                                            <TextBlock Grid.Column="2" Text="Division" FontSize="12" FontWeight="Bold" Foreground="Black"/>
                                            <TextBlock Grid.Column="3" Text="Gender" FontSize="12" FontWeight="Bold" Foreground="Black"/>
                                            <TextBlock Grid.Column="4" Text="Family" FontSize="12" FontWeight="Bold" Foreground="Black" HorizontalAlignment="Center"/>
                                            <TextBlock Grid.Column="5" Text="Status" FontSize="12" FontWeight="Bold" Foreground="Black"/>
                                        </Grid>
                                    </Border>
                                    
                                    <!-- Data Items -->
                                    <ItemsPresenter/>
                                </StackPanel>
                            </ControlTemplate>
                        </ItemsControl.Template>
                    </ItemsControl>
                </ScrollViewer>
                
                <!-- Report Summary -->
                <Border Grid.Row="3"
                        BorderBrush="Black"
                        BorderThickness="0,2,0,0"
                        Margin="0,24,0,0"
                        Padding="0,16,0,0">
                    <Grid>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="*"/>
                        </Grid.ColumnDefinitions>
                        
                        <!-- Total TKA -->
                        <StackPanel Grid.Column="0">
                            <TextBlock Text="Total TKA Workers:"
                                       FontSize="12"
                                       FontWeight="Bold"
                                       Foreground="Black"/>
                            <TextBlock Text="{Binding TotalTkaWorkers}"
                                       FontSize="16"
                                       FontWeight="Bold"
                                       Foreground="#2196F3"/>
                        </StackPanel>
                        
                        <!-- Active TKA -->
                        <StackPanel Grid.Column="1">
                            <TextBlock Text="Active TKA:"
                                       FontSize="12"
                                       FontWeight="Bold"
                                       Foreground="Black"/>
                            <TextBlock Text="{Binding ActiveTkaWorkers}"
                                       FontSize="16"
                                       FontWeight="Bold"
                                       Foreground="#4CAF50"/>
                        </StackPanel>
                        
                        <!-- Total Family Members -->
                        <StackPanel Grid.Column="2">
                            <TextBlock Text="Family Members:"
                                       FontSize="12"
                                       FontWeight="Bold"
                                       Foreground="Black"/>
                            <TextBlock Text="{Binding TotalFamilyMembers}"
                                       FontSize="16"
                                       FontWeight="Bold"
                                       Foreground="#FF5722"/>
                        </StackPanel>
                        
                        <!-- Divisions -->
                        <StackPanel Grid.Column="3">
                            <TextBlock Text="Divisions:"
                                       FontSize="12"
                                       FontWeight="Bold"
                                       Foreground="Black"/>
                            <TextBlock Text="{Binding TotalDivisions}"
                                       FontSize="16"
                                       FontWeight="Bold"
                                       Foreground="#9C27B0"/>
                        </StackPanel>
                    </Grid>
                </Border>
            </Grid>
        </materialDesign:Card>
    </DataTemplate>

    <!-- Company Report Template -->
    <DataTemplate x:Key="CompanyReportTemplate">
        <materialDesign:Card materialDesign:ElevationAssist.Elevation="Dp4"
                             Background="White"
                             Margin="16">
            <Grid Margin="32">
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>  <!-- Header -->
                    <RowDefinition Height="*"/>     <!-- Content -->
                    <RowDefinition Height="Auto"/>  <!-- Summary -->
                </Grid.RowDefinitions>
                
                <!-- Report Header -->
                <Grid Grid.Row="0" Margin="0,0,0,32">
                    <StackPanel>
                        <TextBlock Text="PT. FORTUNA SADA NIOGA"
                                   FontSize="20"
                                   FontWeight="Bold"
                                   Foreground="Black"/>
                        <TextBlock Text="COMPANY REPORT"
                                   FontSize="16"
                                   FontWeight="Bold"
                                   Foreground="Black"
                                   Margin="0,8,0,0"/>
                        <TextBlock Text="{Binding GeneratedDate, StringFormat=Generated on dd MMMM yyyy}"
                                   FontSize="12"
                                   Foreground="#666666"
                                   Margin="0,4,0,0"/>
                    </StackPanel>
                </Grid>
                
                <!-- Report Content -->
                <ScrollViewer Grid.Row="1" VerticalScrollBarVisibility="Auto">
                    <ItemsControl ItemsSource="{Binding Companies}">
                        <ItemsControl.ItemTemplate>
                            <DataTemplate>
                                <Border BorderBrush="#E0E0E0"
                                        BorderThickness="0,0,0,1"
                                        Padding="0,16">
                                    <Grid>
                                        <Grid.RowDefinitions>
                                            <RowDefinition Height="Auto"/>
                                            <RowDefinition Height="Auto"/>
                                        </Grid.RowDefinitions>
                                        
                                        <!-- Company Info -->
                                        <Grid Grid.Row="0">
                                            <Grid.ColumnDefinitions>
                                                <ColumnDefinition Width="*"/>
                                                <ColumnDefinition Width="150"/>
                                                <ColumnDefinition Width="100"/>
                                                <ColumnDefinition Width="120"/>
                                            </Grid.ColumnDefinitions>
                                            
                                            <StackPanel Grid.Column="0">
                                                <TextBlock Text="{Binding CompanyName}"
                                                           FontSize="14"
                                                           FontWeight="Bold"
                                                           Foreground="Black"/>
                                                <TextBlock Text="{Binding Address}"
                                                           FontSize="11"
                                                           Foreground="#666666"
                                                           TextWrapping="Wrap"
                                                           Margin="0,2,0,0"/>
                                            </StackPanel>
                                            
                                            <TextBlock Grid.Column="1"
                                                       Text="{Binding Npwp}"
                                                       FontSize="11"
                                                       Foreground="Black"
                                                       VerticalAlignment="Center"/>
                                            
                                            <TextBlock Grid.Column="2"
                                                       Text="{Binding ActiveTkaCount}"
                                                       FontSize="12"
                                                       FontWeight="Bold"
                                                       Foreground="#4CAF50"
                                                       VerticalAlignment="Center"
                                                       HorizontalAlignment="Center"/>
                                            
                                            <TextBlock Grid.Column="3"
                                                       Text="{Binding TotalInvoices}"
                                                       FontSize="12"
                                                       FontWeight="Bold"
                                                       Foreground="#2196F3"
                                                       VerticalAlignment="Center"
                                                       HorizontalAlignment="Center"/>
                                        </Grid>
                                        
                                        <!-- Contact Info -->
                                        <StackPanel Grid.Row="1" 
                                                    Orientation="Horizontal"
                                                    Margin="0,8,0,0">
                                            <TextBlock Text="Contact:"
                                                       FontSize="10"
                                                       Foreground="#666666"
                                                       Margin="0,0,8,0"/>
                                            <TextBlock Text="{Binding ContactPerson}"
                                                       FontSize="10"
                                                       Foreground="Black"
                                                       Margin="0,0,16,0"/>
                                            <TextBlock Text="{Binding Phone}"
                                                       FontSize="10"
                                                       Foreground="Black"
                                                       Margin="0,0,16,0"/>
                                            <TextBlock Text="{Binding Email}"
                                                       FontSize="10"
                                                       Foreground="Black"/>
                                        </StackPanel>
                                    </Grid>
                                </Border>
                            </DataTemplate>
                        </ItemsControl.ItemTemplate>
                        
                        <!-- Header Template -->
                        <ItemsControl.Template>
                            <ControlTemplate>
                                <StackPanel>
                                    <!-- Column Headers -->
                                    <Border Background="#F5F5F5"
                                            BorderBrush="Black"
                                            BorderThickness="0,0,0,2"
                                            Padding="0,12">
                                        <Grid>
                                            <Grid.ColumnDefinitions>
                                                <ColumnDefinition Width="*"/>
                                                <ColumnDefinition Width="150"/>
                                                <ColumnDefinition Width="100"/>
                                                <ColumnDefinition Width="120"/>
                                            </Grid.ColumnDefinitions>
                                            
                                            <TextBlock Grid.Column="0" Text="Company Name" FontSize="12" FontWeight="Bold" Foreground="Black"/>
                                            <TextBlock Grid.Column="1" Text="NPWP" FontSize="12" FontWeight="Bold" Foreground="Black"/>
                                            <TextBlock Grid.Column="2" Text="Active TKA" FontSize="12" FontWeight="Bold" Foreground="Black" HorizontalAlignment="Center"/>
                                            <TextBlock Grid.Column="3" Text="Total Invoices" FontSize="12" FontWeight="Bold" Foreground="Black" HorizontalAlignment="Center"/>
                                        </Grid>
                                    </Border>
                                    
                                    <!-- Data Items -->
                                    <ItemsPresenter/>
                                </StackPanel>
                            </ControlTemplate>
                        </ItemsControl.Template>
                    </ItemsControl>
                </ScrollViewer>
                
                <!-- Report Summary -->
                <Border Grid.Row="2"
                        BorderBrush="Black"
                        BorderThickness="0,2,0,0"
                        Margin="0,24,0,0"
                        Padding="0,16,0,0">
                    <Grid>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="*"/>
                        </Grid.ColumnDefinitions>
                        
                        <!-- Total Companies -->
                        <StackPanel Grid.Column="0">
                            <TextBlock Text="Total Companies:"
                                       FontSize="12"
                                       FontWeight="Bold"
                                       Foreground="Black"/>
                            <TextBlock Text="{Binding TotalCompanies}"
                                       FontSize="16"
                                       FontWeight="Bold"
                                       Foreground="#2196F3"/>
                        </StackPanel>
                        
                        <!-- Active Companies -->
                        <StackPanel Grid.Column="1">
                            <TextBlock Text="Active Companies:"
                                       FontSize="12"
                                       FontWeight="Bold"
                                       Foreground="Black"/>
                            <TextBlock Text="{Binding ActiveCompanies}"
                                       FontSize="16"
                                       FontWeight="Bold"
                                       Foreground="#4CAF50"/>
                        </StackPanel>
                        
                        <!-- Total TKA -->
                        <StackPanel Grid.Column="2">
                            <TextBlock Text="Total TKA Assigned:"
                                       FontSize="12"
                                       FontWeight="Bold"
                                       Foreground="Black"/>
                            <TextBlock Text="{Binding TotalAssignedTka}"
                                       FontSize="16"
                                       FontWeight="Bold"
                                       Foreground="#FF5722"/>
                        </StackPanel>
                        
                        <!-- Total Invoices -->
                        <StackPanel Grid.Column="3">
                            <TextBlock Text="Total Invoices:"
                                       FontSize="12"
                                       FontWeight="Bold"
                                       Foreground="Black"/>
                            <TextBlock Text="{Binding TotalInvoicesGenerated}"
                                       FontSize="16"
                                       FontWeight="Bold"
                                       Foreground="#9C27B0"/>
                        </StackPanel>
                    </Grid>
                </Border>
            </Grid>
        </materialDesign:Card>
    </DataTemplate>

    <!-- Export Preview Template -->
    <DataTemplate x:Key="ExportPreviewTemplate">
        <materialDesign:Card materialDesign:ElevationAssist.Elevation="Dp2"
                             Background="{DynamicResource MaterialDesignPaper}"
                             Margin="16"
                             Padding="24">
            <StackPanel>
                <!-- Header -->
                <StackPanel HorizontalAlignment="Center"
                            Margin="0,0,0,24">
                    <materialDesign:PackIcon Kind="FileExport"
                                             Width="48" Height="48"
                                             HorizontalAlignment="Center"
                                             Foreground="{DynamicResource PrimaryHueMidBrush}"
                                             Margin="0,0,0,16"/>
                    <TextBlock Text="Export Preview"
                               Style="{StaticResource MaterialDesignHeadline5TextBlock}"
                               HorizontalAlignment="Center"
                               Margin="0,0,0,8"/>
                    <TextBlock Text="Review your export settings before generating the file"
                               Style="{StaticResource MaterialDesignBody1TextBlock}"
                               HorizontalAlignment="Center"
                               Foreground="{DynamicResource MaterialDesignBodyLight}"/>
                </StackPanel>
                
                <!-- Export Settings -->
                <Grid Margin="0,0,0,24">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="*"/>
                    </Grid.ColumnDefinitions>
                    
                    <StackPanel Grid.Column="0" Margin="0,0,16,0">
                        <TextBlock Text="Export Format:"
                                   Style="{StaticResource MaterialDesignCaptionTextBlock}"
                                   Foreground="{DynamicResource MaterialDesignBodyLight}"/>
                        <TextBlock Text="{Binding ExportFormat}"
                                   Style="{StaticResource MaterialDesignSubtitle1TextBlock}"
                                   FontWeight="Bold"/>
                        
                        <TextBlock Text="Date Range:"
                                   Style="{StaticResource MaterialDesignCaptionTextBlock}"
                                   Foreground="{DynamicResource MaterialDesignBodyLight}"
                                   Margin="0,16,0,0"/>
                        <TextBlock Style="{StaticResource MaterialDesignBody1TextBlock}">
                            <Run Text="{Binding StartDate, StringFormat=dd/MM/yyyy}"/>
                            <Run Text=" - "/>
                            <Run Text="{Binding EndDate, StringFormat=dd/MM/yyyy}"/>
                        </TextBlock>
                        
                        <TextBlock Text="Include Filters:"
                                   Style="{StaticResource MaterialDesignCaptionTextBlock}"
                                   Foreground="{DynamicResource MaterialDesignBodyLight}"
                                   Margin="0,16,0,0"/>
                        <TextBlock Text="{Binding AppliedFilters}"
                                   Style="{StaticResource MaterialDesignBody2TextBlock}"/>
                    </StackPanel>
                    
                    <StackPanel Grid.Column="1">
                        <TextBlock Text="File Name:"
                                   Style="{StaticResource MaterialDesignCaptionTextBlock}"
                                   Foreground="{DynamicResource MaterialDesignBodyLight}"/>
                        <TextBlock Text="{Binding FileName}"
                                   Style="{StaticResource MaterialDesignSubtitle1TextBlock}"
                                   FontWeight="Bold"/>
                        
                        <TextBlock Text="Estimated Size:"
                                   Style="{StaticResource MaterialDesignCaptionTextBlock}"
                                   Foreground="{DynamicResource MaterialDesignBodyLight}"
                                   Margin="0,16,0,0"/>
                        <TextBlock Text="{Binding EstimatedSize}"
                                   Style="{StaticResource MaterialDesignBody1TextBlock}"/>
                        
                        <TextBlock Text="Records Count:"
                                   Style="{StaticResource MaterialDesignCaptionTextBlock}"
                                   Foreground="{DynamicResource MaterialDesignBodyLight}"
                                   Margin="0,16,0,0"/>
                        <TextBlock Text="{Binding RecordCount}"
                                   Style="{StaticResource MaterialDesignBody1TextBlock}"/>
                    </StackPanel>
                </Grid>
                
                <!-- Action Buttons -->
                <StackPanel Orientation="Horizontal"
                            HorizontalAlignment="Center">
                    <Button Content="MODIFY SETTINGS"
                            Style="{StaticResource MaterialDesignFlatButton}"
                            Command="{Binding ModifySettingsCommand}"
                            Margin="0,0,16,0"/>
                    <Button Content="EXPORT NOW"
                            Style="{StaticResource MaterialDesignRaisedButton}"
                            Command="{Binding ExportCommand}"/>
                </StackPanel>
            </StackPanel>
        </materialDesign:Card>
    </DataTemplate>

</ResourceDictionary>